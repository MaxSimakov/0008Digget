//- menu
mixin mnu()

	+b.UL.navMenu(itemscope itemtype="http://schema.org/SiteNavigationElement")
		+e.LI.item.dropdown( itemprop="item" )
			+e.link Услуги
			.drop-open.drop-accardion-js
				img(src="img/svg/chevron-down.svg", alt="")
			+b.UL.drop.drop-accardion-toggle-js
				+e.LI.item
					+e.A.link(href="#" itemprop="url") 
						+e.iconWrap
							img(src="img/svg/submenu-1.svg", alt="")
						+e.txtWrap
							+e.title О нас
							+e.subtitle Раcскажем о наших ценностях. Реквизиты
				+e.LI.item
					+e.A.link(href="#" itemprop="url") 
						+e.iconWrap
							img(src="img/svg/submenu-2.svg", alt="")
						+e.txtWrap
							+e.title Партнеры
							+e.subtitle Акции, варианты сотрудничества, список партнеров.
